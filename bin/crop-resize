#!/bin/sh

usage() {
cat <<-EOF
Usage:       -i [input-file.jpg] -w [width] -h [height] -g [gravity] -o [output-file.jpg]
Description: Crop and resize an image
EOF
}

if [[ $# -eq 0 ]]
then
  usage
  exit 1
fi

HEIGHT=""
GRAVITY="center"

while getopts ":i:w:h:g:o:" o; do
  case "${o}" in
    i)
      INPUT=${OPTARG}
      ;;
    o)
      OUTPUT=${OPTARG}
      ;;
    w)
      WIDTH=${OPTARG}
      ;;
    h)
      HEIGHT=${OPTARG}
      ;;
    g)
      GRAVITY=${OPTARG}
      ;;
    *)
      usage
      exit 1
      ;;
  esac
done

if ! [[ -n "$WIDTH" || -n "$1" ]]; then
  echo "input file and width must be specified"
  exit 1
fi

if [[ -z "$HEIGHT" ]]; then
  HEIGHT="$WIDTH"
fi

if [[ -z "$OUTPUT" ]]; then
  OUTPUT="$INPUT"
fi

convert "${INPUT}" -resize "${WIDTH}"x"${HEIGHT}"^ -gravity "${GRAVITY}" -extent "${WIDTH}"x"${HEIGHT}" "${OUTPUT}"
